def get_prediction(x, theta):
    '''
    Evaluate a linear model that is a 3rd order polynomial

    fx = theta[0] + theta[1] * x + theta[2] * x**2 + theta[3] * x**3 

    Input:
    - x: shape (n,)
    - theta: shape (4,)

    Output:
    - fx: shape (n,)
    '''
    
    assert theta.shape[0] == 4 # sanity check for 3rd order polynomial
    
    # The polynomial
    fx = theta[0] + theta[1] * x + theta[2] * x**2 + theta[3] * x**3
    
    return fx

# Example:
